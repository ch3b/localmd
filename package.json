{
  "name": "localmd",
  "version": "0.1.0",
  "description": "Desktop markdown reader with folder tree",
  "main": "app/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "clean": "node -e \"const fs=require('fs');fs.rmSync('app',{recursive:true,force:true});\"",
    "build:node": "tsc -p tsconfig.node.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "build:assets": "node -e \"const fs=require('fs');fs.mkdirSync('app/renderer',{recursive:true});fs.copyFileSync('src/renderer/index.html','app/renderer/index.html');fs.copyFileSync('src/renderer/styles.css','app/renderer/styles.css');\"",
    "build": "npm run clean && npm run build:node && npm run build:renderer && npm run build:assets",
    "start": "npm run build && electron .",
    "dev": "npm run start",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "feather-icons": "^4.29.2",
    "marked": "^15.0.12"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "electron": "^35.0.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.localmd.app",
    "productName": "localmd",
    "fileAssociations": [
      {
        "ext": [
          "md",
          "markdown",
          "mdown",
          "mkd"
        ],
        "name": "Markdown Document",
        "description": "Markdown file",
        "role": "Editor"
      }
    ],
    "files": [
      "app/**/*",
      "build/icon.icns",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
